generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  email    String    @unique
  name     String
  rsvp     Boolean   @default(false)
  rspvDate DateTime?
  group    Group?    @relation(fields: [groupId], references: [id])
  groupId  String?
}

model Group {
  id     String  @id @default(uuid())
  guests Guest[]
}
