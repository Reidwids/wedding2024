generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id    String @unique
  name  String
  email String
  group Group? @relation(fields: [id], references: [id])
}

model Group {
  id     String  @id @default(uuid())
  guests Guest[]
}
